<script>
    var map = new AMap.Map("mapContainer", {
        viewMode: '3D',
        zoom: 15,
        resizeEnable: true,
        center: [117.22, 31.77], //地图中心点
    });

    var marker = new AMap.Marker({
        position: new AMap.LngLat(117.228003, 31.772092),   // 经纬度对象，也可以是经纬度构成的一维数组[116.39, 39.9]
        title: '合肥一沙软件',
        icon: '/images/address.png'
    });

    // 将创建的点标记添加到已有的地图实例：
    map.add(marker);
</script>

